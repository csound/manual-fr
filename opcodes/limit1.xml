<refentry id="limit1">
<indexterm id="IndexLimit1"><primary>limit1</primary></indexterm>
  <refentryinfo><title>Mathematical Operations:Arrays </title></refentryinfo>
  <refmeta>
    <refentrytitle>limit1</refentrytitle>
  </refmeta>

  <refnamediv>
    <refname>limit1</refname>
    <refpurpose>
      Fonction limiteur.
    </refpurpose>
  </refnamediv>
 
  <refsect1>
    <title>Description</title>
    <para>
      Limite la valeur de son argument à l'intervalle [0, 1].
    </para>
  </refsect1>

  <refsect1>
    <title>Syntaxe</title>
    <synopsis>ires[] <command>limit1</command> iarg</synopsis>
    <synopsis>kres[] <command>limit1</command> karg</synopsis>
  </refsect1>
 
  <refsect1>
    <title>Initialisation</title>
    <para>
      <emphasis>iarg[] </emphasis> -- l'argument.
    </para>
  </refsect1>
 
  <refsect1>
    <title>Exécution</title>
    <para>
      <emphasis>karg[] </emphasis> -- l'argument.
    </para>
  </refsect1>
 
