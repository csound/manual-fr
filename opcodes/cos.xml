  <refnamediv>
    <refname>cos</refname>
    <refpurpose>
      Calcule une fonction cosinus.
    </refpurpose>
  </refnamediv>

  <refsect1>
    <title>Description</title>
    <para>
      Retourne cosinus de <emphasis>x</emphasis> (<emphasis>x</emphasis> en radians).
    </para>
  </refsect1>
 
  <refsect1>
    <title>Syntaxe</title>
    <synopsis><command>cos</command>(x) (pas de restriction de taux)</synopsis>
  </refsect1>

