<refentry id="cntRead">
<indexterm id="IndexCntRead"><primary>cntRead</primary></indexterm>
<!--Make sure the category below is a valid one! See categories.py-->
  <refentryinfo><title>Instrument Control:Sensing and Control</title></refentryinfo>
  <refmeta>
    <refentrytitle>cntRead</refentrytitle>
  </refmeta>

  <refnamediv>
    <refname>cntRead</refname>
    <refpurpose>
      Lit la valeur courante d'un objet compteur.
    </refpurpose>
  </refnamediv>
 
  <refsect1>
    <title>Description</title>
    <para>Opcode du greffon counter.</para>
     <para>
      Lit la valeur courante d'un objet compteur sans la changer.
    </para>
  </refsect1>

  <refsect1>
    <title>Syntaxe</title>
    <synopsis>kval <command>cntRead</command>icnt</synopsis>
  </refsect1>

  <refsect1>
    <title>Initialisation</title>
     <para>
       <emphasis>icnt</emphasis> -- un identifiant pour le compteur.
    </para>
  </refsect1>
 
`  <refsect1>
    <title>Exécution</title>
    <para>
      Lit un objet compteur.
    </para>
  </refsect1>

