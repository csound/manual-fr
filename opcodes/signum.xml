  <refnamediv>
    <refname>signum</refname>
    <refpurpose>
      Fonction signe.
    </refpurpose>
  </refnamediv>

  <refsect1>
    <title>Description</title>
    <para>
      Retourne -1, 0 ou 1 selon le signe de <emphasis>x</emphasis>.
    </para>
  </refsect1>
 
  <refsect1>
    <title>Syntaxe</title>
    <synopsis><command>signum</command>(x) (aucune restriction de taux)</synopsis>
  </refsect1>

