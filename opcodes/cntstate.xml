<!--Change refentry id and indexterm id-->
<refentry id="cntState">
  <indexterm id="IndexCntState"><primary>cntState</primary></indexterm>
  <!--Make sure the category below is a valid one! See categories.py-->
  <refentryinfo><title>Instrument Control:Sensing and Control</title></refentryinfo>
  <refmeta>
    <refentrytitle>cntState</refentrytitle>
  </refmeta>

  <refnamediv>
    <refname>cntState</refname>
    <refpurpose>
      Donne l'intervalle et le pas d'incrémentation d'un compteur.
    </refpurpose>
  </refnamediv>
  
  <refsect1>
    <title>Description</title>
    <para>Opcode du greffon counter.</para>
    <para>
      Donne l'intervalle et le pas d'incrémentation d'un compteur.
    </para>
  </refsect1>

  <refsect1>
    <title>Syntaxe</title>
    <synopsis>kmax, kmin, kinc <command>cntState</command>icnt</synopsis>
  </refsect1>

  <refsect1>
    <title>Initialisation</title>
    <para>
      <emphasis>icnt</emphasis> -- un identifiant pour le compteur.
    </para>
  </refsect1>
  
  <refsect1>
    <title>PExécution</title>
    <para>
      kmax, kmin, kinc -- arguments donnés à l'origine du compteur.
    </para>
  </refsect1>

  <refsect1>
    <title>Voir aussi</title>
    <para>
      <link linkend="ControlPgmctl"><citetitle>Contrôle séquentiel d'un programme : compteurs</citetitle></link>
    </para>
  </refsect1>

