<refentry id="zkr">
<indexterm id="IndexZkr"><primary>zkr</primary></indexterm>
  <refentryinfo><title>Zak Patch System</title></refentryinfo>
  <refmeta>
    <refentrytitle>zkr</refentrytitle>
  </refmeta>


 
  <refnamediv>
    <refname>zkr</refname>
    <refpurpose>
      Lecture à partir d'une position dans l'espace zk au taux-k.
    </refpurpose>
  </refnamediv>
 
  <refsect1>
    <title>Description</title>
    <para>
      Lecture à partir d'une position dans l'espace zk au taux-k.
    </para>
  </refsect1>
 
  <refsect1>
    <title>Syntaxe</title>
    <synopsis>kres <command>zkr</command> kndx</synopsis>
  </refsect1>

  <refsect1>
    <title>Initialisation</title>
    <para>
      <emphasis>kndx</emphasis> -- pointe sur la position za à lire.
    </para>
  </refsect1>
 
  <refsect1>
    <title>Exécution</title>
    <para>
      <emphasis>zkr</emphasis> lit la suite de nombres décimaux à <emphasis>kndx</emphasis> dans
      l'espace zk.
    </para>
  </refsect1>

